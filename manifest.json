{
  "manifest_version": 3,
  "name": "Taby",
  "description": "A tab switcher",
  "version": "1.0",
  "author": "Franck Hu",
  "permissions": ["tabs"],
  "icons": {
    "128": "icons/icon-128.png"
  },
  "content_scripts": [
    {
      "js": ["src/script/content-script.ts"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "src/background/service-worker.ts",
    "type": "module"
  },
  "action": {
    "default_icon": {
      "128": "icons/icon-128.png"
    }
  },
  "commands": {
    "TOGGLE_MENU": {
      "suggested_key": {
        "default": "Alt+C"
      },
      "description": "Toggle Taby menu"
    }
  }
}
