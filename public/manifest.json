{
  "manifest_version": 2,
  "name": "Taby",
  "description": "Quickly move between tabs, bookmarks and history",
  "version": "1.18.0",
  "author": "Franck Hu",
  "permissions": ["tabs", "storage", "bookmarks", "history"],
  "optional_permissions": ["<all_urls>"],
  "browser_action": {
    "default_popup": "./src/popup/popup.html",
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["./index.global.js"],
      "css": ["./style.css"]
    }
  ],
  "background": {
    "page": "src/background/background.html",
    "persistent": false
  },
  "icons": {
    "128": "icon-128.png"
  },
  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Alt+Q"
      }
    },
    "TOGGLE_MENU": {
      "suggested_key": {
        "default": "Alt+W"
      },
      "description": "Toggle Taby menu"
    },
    "DUPLICATE_TAB": {
      "description": "Duplicate current tab"
    }
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "{48ab5564-d35c-4a64-bc4f-df2bd56f56f4}"
    }
  }
}
