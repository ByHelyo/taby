{
  "manifest_version": 3,
  "name": "Taby",
  "description": "Quickly move between tabs",
  "version": "1.11.2",
  "author": "Franck Hu",
  "permissions": ["tabs"],
  "action": {
    "default_popup": "./src/popup/popup.html",
    "default_title": "Open the popup"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["./index.global.js"],
      "css": ["./style.css"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["image/glass.svg"],
      "matches": ["<all_urls>"]
    }
  ],
  "background": {
    "service_worker": "./background.global.js"
  },
  "icons": {
    "128": "icon-128.png"
  },
  "commands": {
    "TOGGLE_MENU": {
      "suggested_key": {
        "default": "Alt+Q"
      },
      "description": "Toggle Taby menu"
    },
    "DUPLICATE_TAB": {
      "description": "Duplicate current tab"
    }
  }
}
