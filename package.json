{
  "name": "taby",
  "private": false,
  "version": "1.0.0",
  "description": "A tab switcher",
  "scripts": {
    "build:manifest:chrome": "mv dist/manifestv3.json dist/manifest.json",
    "build:background:chrome": "vite build --config vite.chrome.background.config.ts",
    "build:js": "vite build --config vite.content.config.ts",
    "build:web": "tsc && vite build",
    "build": "NODE_ENV=production run-s build:js build:web",
    "build:chrome": "NODE_ENV=production run-s build:js build:background:chrome build:web build:manifest:chrome",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "check": "prettier --check .",
    "format": "prettier --write .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ByHelyo/taby.git"
  },
  "author": "Franck Hu",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ByHelyo/taby/issues"
  },
  "homepage": "https://github.com/ByHelyo/taby#readme",
  "devDependencies": {
    "@types/webextension-polyfill": "^0.10.4",
    "@typescript-eslint/eslint-plugin": "^5.60.1",
    "@typescript-eslint/parser": "^5.60.1",
    "chrome-webstore-upload-cli": "^2.2.2",
    "eslint": "^8.43.0",
    "husky": "^8.0.3",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.8",
    "typescript": "^5.1.3",
    "vite": "^4.3.9",
    "web-ext": "^7.8.0",
    "webextension-polyfill": "^0.10.0"
  },
  "dependencies": {
    "fuse.js": "^6.6.2"
  }
}
